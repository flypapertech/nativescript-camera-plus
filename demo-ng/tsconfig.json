{
  "compilerOptions": {
    "module": "esNext",
    "target": "es2017",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["es2017", "es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["../src", "**/*"],
  "exclude": ["nativescript.config.ts", "node_modules", "platforms"]
}
